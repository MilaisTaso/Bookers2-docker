<div class='col-md-3'>
  <%= render 'shared/profile', user: @user %>
  <%= render 'shared/form', book: @book %>
</div>
<div class="col-md-8 offset-md-1">
  <%= render 'shared/table_head' %>
  <% @books.each do |book| %>
  <tr>
    <%= render 'shared/table_body', book:book %>
    <%= render 'book_comments/recode', book:book%>
    <td id ="favorite_btn_<%= book.id %>" >
      <%= render 'favorites/btn', book:book %>
    </td>
      <%= render 'shared/btn', book:book %>
  </tr>
  <% end %>
  <%= render 'shared/table_under' %>
  <%= render 'shared/conparion',today_book:@today_book,yesterday_book:@yesterday_book, day_conparison:@day_conparison, week_conparison:@week_conparison, week_books:@week_books,this_week_book:@this_week_book,last_week_book:@last_week_book %>
  <%= render 'chart/chart' %>
</div>
