<td>
  <%= link_to user_path(book.id)  do %>
    <%= image_tag book.user.image_resize(50,50) %>
    <br><span class="hidden"><%= book.user.name  %></span>
  <% end %>
</td>
<td><%= link_to book.title, book_path(book.id) %></td>
<td><%= book.body%></td>
<td id="show_score<%= book.id%>"></td>
<script>
  var elem = document.querySelector('#show_score<%= book.id%>');
  var opt = {
    //星画像の指定などのオプションをここに記述
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    readOnly: true,
    half: false,
    score: '<%= book.score%>',
   };
  raty(elem,opt);
</script>
