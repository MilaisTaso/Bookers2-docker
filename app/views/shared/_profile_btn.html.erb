<% if user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% else %>
    <% if current_user.following?(user) %>
      <%= link_to 'フォローを解除する', user_relationship_path(user.id), method: :delete, remote: true, class: "btn btn-outline-secondary btn-block" %>
      <%# 相互フォローのみ使えるDM用のルームのリンク %>
    <% else %>
      <%= link_to 'フォローする', user_relationship_path(user.id), method: :post, remote: true, class: "btn btn-outline-secondary btn-block" %>
    <% end %>
  <% end %>
