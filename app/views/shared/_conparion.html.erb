<h2>投稿数の前日比・前週比</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>今日の投稿数</th>
      <th>昨日の投稿数</th>
      <th>前日比</th>
    </tr>
  </thead>
  <tbody>
    <td><%= @today_book.count %></td>
    <td><%= @yesterday_book.count %></td>
    <td><%= @day_conparison %> %</td>
  </tbody>
</table>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>今週の投稿数</th>
      <th>先週の投稿数</th>
      <th>前週比</th>
    </tr>
  </thead>
  <tbody>
    <td><%= @this_week_book.count %></td>
    <td><%= @last_week_book.count %></td>
    <td><%= @week_conparison%> %</td>
  </tbody>
</table>
